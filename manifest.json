{
  "manifest_version": 3,
  "name": "Cognitive UI Tracker",
  "version": "1.0",
  "description": "Tracks scroll and dwell time for cognitive load inference",
  "permissions": [
  "storage",
  "scripting",
  "activeTab",
  "tabs"
],
"host_permissions": [
  "http://*/*",
"http://localhost:8001/"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  }
}
